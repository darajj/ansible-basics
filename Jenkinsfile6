def post = new URL("http://192.168.15.140:8080/job/jessi2-pipeline/lastSuccessfulBuild/api/json?tree=actions[lastBuiltRevision[SHA1]]&depth=3").openConnection()

String user = "admin"
String pass = "admin123"
String authStr = user +":"+  pass
String encoding = authStr.getBytes("utf-8").encodeBase64().toString()


post.setRequestMethod("POST")
post.setDoOutput(true)
post.setRequestProperty("Authorization", "Basic " + encoding)
def postRC = post.getResponseCode()
if(postRC.equals(200)) {
    def result = post.getInputStream().getText()
    def shaBegin = result.indexOf('SHA1":"') + 7
    def shaEnd = result.indexOf('"', shaBegin)
    println(result.substring(shaBegin, shaEnd))
    return ["COMMIT_ID": result.substring(shaBegin, shaEnd)]
}
pipeline{
  agent any 

  parameters {
    gitParameter(
      branch: '',
      branchFilter: ".*",
      defaultValue: "",
      description: '',
      listSize: '10',
      name: 'COMMIT_ID',
      quickFilterEnabled: false,
      selectedValue: 'NONE',
      sortMode: 'ASCENDING_SMART',
      tagFilter: "*",
      type: 'master',
      useRepository: 'git@github.com/lakhanyawa/ansible-basics')
   }
   stages{
      stage ("echo Git Tag") {
        steps {
          echo "${params.COMMIT_ID}"
        }
     }
  } 
}
